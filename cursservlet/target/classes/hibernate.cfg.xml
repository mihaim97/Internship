<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/internship</property>
        <property name="hibernate.connection.username">mihai</property>
        <property name="hibernate.connection.password">mihai</property>
        <property name="show_sql">true</property>
        <property name="hbm2ddl.auto">update</property>
        <mapping  package="com.mihai.hibernate.entity"/> <!-- Nu merge cu intreg pachetul .... (: De ce ?????-->
        <mapping class="com.mihai.hibernate.entity.Product"/>
        <mapping class = "com.mihai.hibernate.entity.User" />
        <mapping class = "com.mihai.hibernate.entity.ProductType" />
        <mapping class = "com.mihai.hibernate.entity.Order"/>
    </session-factory>
</hibernate-configuration>